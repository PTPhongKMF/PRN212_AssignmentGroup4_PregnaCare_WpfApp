<Window x:Class="PregnaCare_WpfApp.BlogDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blog Detail" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Name="BlogTitle" FontSize="24" FontWeight="Bold" Margin="5"/>
                <Image Name="BlogImage" Width="300" Height="200" Margin="5" Stretch="UniformToFill"/>
                <TextBlock Name="BlogHeading" FontSize="18" FontWeight="SemiBold" Margin="5"/>
                <TextBlock Name="BlogShortDescription" FontSize="14" TextWrapping="Wrap" Margin="5"/>
                <TextBlock Name="BlogContent" FontSize="14" TextWrapping="Wrap" Margin="5"/>
                <TextBlock Name="BlogUrlHandle" FontSize="12" Foreground="Gray" Margin="5"/>
                <TextBlock Name="BlogViewCount" FontSize="12" Foreground="Gray" Margin="5"/>
                <TextBlock Name="BlogCreatedAt" FontSize="12" Foreground="Gray" Margin="5"/>
                <TextBlock Name="BlogUpdatedAt" FontSize="12" Foreground="Gray" Margin="5"/>
                <TextBlock Name="BlogIsVisible" FontSize="12" Foreground="Gray" Margin="5"/>
                <Button Content="Back" Width="100" Height="30" Margin="5" Click="Back_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
