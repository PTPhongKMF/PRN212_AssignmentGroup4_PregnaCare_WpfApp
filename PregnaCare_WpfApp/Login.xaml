<Window x:Class="PregnaCare_WpfApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PregnaCare_WpfApp"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="D:\PRN212_AssignmentGroup4_PregnaCare_WpfApp\PregnaCare_WpfApp\Images\anh.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Semi-transparent overlay -->
        <Rectangle Fill="#80000000" Opacity="0.6"/>

        <!-- Main content container -->
        <Border Background="#FFFFFFFF" 
                Border.CornerRadius="10" 
                Width="320" 
                Height="380"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <!-- App Logo/Title -->
                <Viewbox Stretch="Uniform" Width="180" Height="60" Margin="0,0,0,20">
                    <TextBlock Text="PregnaCare" 
                               FontFamily="Segoe UI" 
                               FontWeight="SemiBold"
                               Foreground="#FF4A6FB5"/>
                </Viewbox>

                <!-- Login Header -->
                <TextBlock Text="Sign In" 
                           FontSize="24" 
                           FontWeight="Medium"
                           Foreground="#FF333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Email Field -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Email" 
                               Foreground="#FF555555"
                               Margin="0,0,0,5"/>
                    <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Border.CornerRadius="5">
                        <TextBox x:Name="txtEmail" Height="35" Padding="10" Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Password" 
                               Foreground="#FF555555"
                               Margin="0,0,0,5"/>
                    <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Border.CornerRadius="5">
                        <PasswordBox x:Name="txtPassword" Height="35" Padding="10" Background="Transparent"/>
                    </Border>
                </StackPanel>

                <!-- Login Button -->
                <Border Background="#FF4A6FB5" Border.CornerRadius="5">
                    <Button x:Name="btnLogin" 
                            Content="LOGIN" 
                            Height="45" 
                            Background="Transparent"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand" Click="btnLogin_Click"/>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Window>
